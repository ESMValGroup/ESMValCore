<h2>{{ task.name }}</h2>

{% for file in task.image_files %}

    <p>
        {{ file.caption }}
    </p>
    <p>
        <img width='80%' src='{{ file.relative_to(session.session_dir) }}' alt='{{ file.caption }}'/>
    </p>

{% endfor %}

{% for file in task.data_files %}

    <p>
        {{ file.caption }}
    </p>
    <p>
        <a href='{{ file.relative_to(session.session_dir) }}'>{{ file.filename.name }}</a>
    </p>

{% endfor %}
